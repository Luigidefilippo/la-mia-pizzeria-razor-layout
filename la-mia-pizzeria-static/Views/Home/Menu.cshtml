@page
@model la_mia_pizzeria_static.Views.Home.MenuModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
	<link  rel="stylesheet" href="~/css/userpage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
	<!-- header section -->
	@Html.Partial("_Sidebar")
    <div class="container mt-5">
        <h1>Menu delle Pizze</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrizione</th>
                    <th>Foto</th>
                    <th>Prezzo</th>
                </tr>
            </thead>
            <tbody>
                <!-- Riga 1 - Pizza 1 -->
                <tr>
                    <td>Pizza Margherita</td>
                    <td>Una pizza classica con pomodoro, mozzarella e basilico fresco.</td>
                    <td><img src="~/img/PANICPIZZA (1).png" alt="Pizza Margherita" width="100"></td>
                    <td>$10.99</td>
                </tr>
                <!-- Riga 2 - Pizza 2 -->
                <tr>
                    <td>Pizza Pepperoni</td>
                    <td>Una pizza abbondante con peperoni e formaggio fuso.</td>
                    <td><img src="~/img/PANICPIZZA (4).png" alt="Pizza Pepperoni" width="100"></td>
                    <td>$12.99</td>
                </tr>
                <!-- Aggiungi altre righe per altre pizze -->
            </tbody>
        </table>
    </div>
</body>
</html>
